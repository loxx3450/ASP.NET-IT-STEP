@model Worker

<h1>Edit Picture</h1>

<div>

    <h4>Current Picture</h4>

    @* Showing picture *@
    @if (!string.IsNullOrEmpty(Model.PicturePath))
    {
        <img src="@Model.PicturePath" width="300" />
    }
    else
    {
        <span>---</span>
    }



    <h4>New Picture</h4>

    @* Sending form with new picture *@
    <form asp-action="EditPicture" enctype="multipart/form-data">
        <div class="form-group">
            <input type="file" name="file" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Change Picture" class="btn btn-primary" />
        </div>
    </form>

</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
